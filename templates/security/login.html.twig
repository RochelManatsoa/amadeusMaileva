{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}

	<div class="container-fluid bg-marbre-blanc d-grid justify-content-md-end justify-content-center align-items-center">
		<div class="container-form-login bg-gradient-green shadow-night-blue text-green-white">
			<form method="post">
				{% if error %}
					<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
				{% endif %}

				{% if app.user %}
					<div class="mb-3">
						You are logged in as
						{{ app.user.userIdentifier }},
						<a href="{{ path('app_logout') }}">Logout</a>
					</div>
				{% endif %}

				<h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
				<div class="user-field">
					<label class="form-label" for="inputEmail">Email</label>
					<input class="form-control" type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
				</div>
				<div class="user-field">
					<label for="inputPassword">Password</label>
					<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
				</div>
				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <div class="connexion-gestion">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" name="_remember_me">
                            Remember me
                        </label>
                    </div>
                    <div class="les-boutons">
                        <button class="button btn-gradient-green" type="submit">
                            Sign in
                        </button>
                        <button class="button btn-gradient-green">
                            <a class="text-decoration-none text-white" href="{{path('app_register')}}">
                                Sign up
                            </a>
                        </button>
                    </div>
                </div>
				
			</form>
		</div>
	</div>

{% endblock %}
