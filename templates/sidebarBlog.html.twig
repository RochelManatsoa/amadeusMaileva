<ul class="blog-category list-unstyled mt-3 mx-md-3 me-sm-3 px-md-4 px-3 py-4 border">
    {% for category in categories %}
        
        <li class="mt-3">
            <a href="#{{category.slug}}" class="h6 ms-1 text-decoration-none" onclick="togglePostContainer(this)" onmouseover="togglePostContainer(this)">
                {{ category.nom }}
            </a>
            <div class="container-post-links d-none">
                <ul class="list-unstyled">
                    {% for post in category.posts %}
                        <li class="py-1 ps-3 border-bottom">
                            <a href="{{ path('post_show', {'slug':post.slug}) }}" class="text-decoration-none post-link {% if post.slug == current %}active{% endif %}">
                                {{ post.titre }}
                            </a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </li>

    {% endfor %}
</ul>